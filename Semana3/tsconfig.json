{
  "compilerOptions": {
    "useDefineForClassFields": true,
    "lib": ["DOM", "ES2020"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "esnext",
    "target": "esnext",
    "strict": true
  },
  "include": ["src", "server.js"]
}
